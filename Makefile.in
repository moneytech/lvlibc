override prefix = @@PREFIX@@
DESTDIR =

override includeDir = include
override testDir    = test

override libcDir = libc
override mathDir = math

override libcExec = libc.a
override mathExec = libm.a

CC = cc
AR = ar

CFLAGS  = -O2 -Wall -Wextra -Wpedantic
ARFLAGS =

CFLAGS_INTERNAL  := $(CFLAGS) -I$(includeDir) -ffreestanding
ARFLAGS_INTERNAL := $(ARFLAGS)rcs

libcSource = $(shell find $(libcDir) -type f -name '*.c')
mathSource = $(shell find $(mathDir) -type f -name '*.c')

libcObjects = $(libcSource:.c=.o)
mathObjects = $(mathSource:.c=.o)

.PHONY: all install-headers install test clean distclean

all: $(libcObjects) $(mathObjects)
	@echo "$(AR) '$(libcExec)'..."
	@$(AR) $(ARFLAGS_INTERNAL) $(libcExec) $(libcObjects)
	@echo "$(AR) '$(mathExec)'..."
	@$(AR) $(ARFLAGS_INTERNAL) $(mathExec) $(mathObjects)

%.o: %.c
	@echo "$(CC) '$@'..."
	@$(CC) $(CFLAGS_INTERNAL) -c $< -o $@

install-headers:
	@echo "Preparing $(DESTDIR)$(prefix)..."
	@mkdir -p "$(DESTDIR)$(prefix)/include"

	@echo "Copying headers from $(includeDir) to $(DESTDIR)$(prefix)/include..."
	@cp -r $(includeDir)/* "$(DESTDIR)$(prefix)/include"

install: install-headers
	@mkdir -p "$(DESTDIR)$(prefix)/lib"

	@echo "Installing '$(libcExec)' to $(DESTDIR)$(prefix)/lib..."
	@cp $(libcExec) $(DESTDIR)$(prefix)/lib

	@echo "Installing '$(mathExec)' to $(DESTDIR)$(prefix)/lib..."
	@cp $(mathExec) $(DESTDIR)$(prefix)/lib

test:
	@echo "Test $(libcExec)..."
	@$(CC) $(testDir)/libc.c $(libcExec) -static -isystem $(includeDir) -o libctest
	@./libctest
	@rm -rf libctest

	@echo "Test $(mathExec)..."
	@$(CC) $(testDir)/math.c $(mathExec) -static -isystem $(includeDir) -o mathtest
	@./mathtest
	@rm -rf mathtest

clean:
	rm -rf $(libcObjects) $(mathObjects) $(libcExec) $(mathExec)

distclean: clean
	rm -f Makefile
